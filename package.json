{
  "name": "backend-web",
  "version": "1.0.0",
  "description": "* node.js\r * Express\r * typescript",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist",
    "test": "mocha --timeout 10000 --require ts-node/register 'src/test/**/*.ts'",
    "dev": "nodemon --delay 2.5 src/index.ts",
    "eslint": "npx eslint src/**/* --resolve-plugins-relative-to .",
    "fix": "npx eslint src/**/* --resolve-plugins-relative-to . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curriculum-of-coding/BackEnd-web.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/curriculum-of-coding/BackEnd-web/issues"
  },
  "homepage": "https://github.com/curriculum-of-coding/BackEnd-web#readme",
  "dependencies": {
    "@types/mongoose": "^5.10.3",
    "@types/mongoose-auto-increment": "^5.0.1",
    "express": "^4.17.1",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.3.0",
    "eslint": "^7.20.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.0",
    "mongoose": "^5.11.17",
    "mongoose-auto-increment": "^5.0.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --resolve-plugins-relative-to .",
      "prettier --write",
      "git add"
    ]
